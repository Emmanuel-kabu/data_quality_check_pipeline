# ---------------------------------------------------------------------------
# AWS S3 Configuration
# ---------------------------------------------------------------------------
CLOUD_STORAGE_ENABLED=true
CLOUD_PROVIDER=s3
CLOUD_BUCKET=data-quality-report-2002
CLOUD_REGION=us-west-2
CLOUD_RAW_PREFIX=raw/
CLOUD_CLEANED_PREFIX=cleaned/
CLOUD_REPORTS_PREFIX=reports/
CLOUD_QUARANTINE_PREFIX=quarantine/

# AWS Credentials (if not using aws configure / IAM role)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_SESSION_TOKEN=           # Only needed for temporary credentials

# ---------------------------------------------------------------------------
# Human-in-the-Loop Review
# ---------------------------------------------------------------------------
HUMAN_REVIEW_ENABLED=true
REVIEW_TIMEOUT=300
REVIEW_TIMEOUT_ACTION=quarantine

# ---------------------------------------------------------------------------
# Retry Configuration
# ---------------------------------------------------------------------------
MAX_RETRIES=3

# ---------------------------------------------------------------------------
# Slack Notifications
# ---------------------------------------------------------------------------
SLACK_ENABLED=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#quality-report 

# ---------------------------------------------------------------------------
# Email Notifications
# ---------------------------------------------------------------------------
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_SENDER=alerts@yourcompany.com
EMAIL_PASSWORD=your-app-password
EMAIL_CRITICAL=critical-alerts@yourcompany.com
EMAIL_WARNING=warning-alerts@yourcompany.com
EMAIL_WEEKLY=weekly-reports@yourcompany.com

# ---------------------------------------------------------------------------
# PagerDuty Notifications
# ---------------------------------------------------------------------------
PAGERDUTY_ENABLED=false
PAGERDUTY_ROUTING_KEY=your-pagerduty-routing-key
